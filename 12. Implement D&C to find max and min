#include <iostream>
using namespace std;

void findMaxMin(int arr[], int low, int high, int &mx, int &mn) {
    if (low == high) {
     mx = mn = arr[low];
      return; }
    if (high == low + 1) {
        mx = max(arr[low], arr[high]);
        mn = min(arr[low], arr[high]);
        return;
    }

    int mid = (low + high) / 2;
    int leftMax, leftMin, rightMax, rightMin;

    findMaxMin(arr, low, mid, leftMax, leftMin);
    findMaxMin(arr, mid + 1, high, rightMax, rightMin);

    mx = max(leftMax, rightMax);
    mn= min(leftMin, rightMin);
}

int main() {
    int n;
    cout<<"Enter array size: ";
    cin >> n;
    int arr[n], mx, mn;
    cout<<"Enter array elements: ";
    for (int i = 0; i < n; i++)
    cin >> arr[i];
    findMaxMin(arr, 0, n - 1, mx, mn);
    cout << "Maximum: " << mx << "\nMinimum: " << mn << endl;
}
